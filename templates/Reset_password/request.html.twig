{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="mt-5 {{ is_mobile() ? 'p-3' : 'p-5 d-flex justify-content-center' }} resetPassContainer">
		<div class="cardExtra {{ is_mobile() ? '' : 'col-9 pt-3' }}">
			<div class="cardBox d-flex justify-content-center">
				<div class="col-md-10 col-lg-12 mt-3">
					<h1 class="h3 mb-3 font-weight-normal text-center">{{ 'resetPassTitle'|trans({}, 'security') }}</h1>
					{{ include('General/sellerForm.html.twig', { form: requestForm }) }}
				</div>
			</div>
			<div class="extraMessage d-flex justify-content-center pt-2">
				<a href="{{ absolute_url(path('app_login')) }}">{{ 'login.button'|trans({}, 'security') }}</a>
			</div>
		</div>
	</div>
{% endblock %}
