{% extends "base.html.twig" %}
{% block body %}
	<div class="mt-5 {{ is_mobile() ? 'p-3' : 'p-5 d-flex justify-content-center' }} resetPassContainer">
		<div class="cardExtra {{ is_mobile() ? '' : 'col-9 pt-3 pb-3' }}">
			<div class="cardBox d-flex justify-content-center">
				<div class="col-md-10 col-lg-12 mt-3 text-center ">
					{% if error %}
						<img class="flag p-1" href="#" src="{{ absolute_url(asset('Img/Icons/alert-ico.png')) }}" height="50" width="50">
					{% else %}
						<img class="flag p-1" href="#" src="{{ absolute_url(asset('Img/Icons/success-ico.png')) }}" height="50" width="50">
					{% endif %}
					{{ response }}
				</div>
			</div>
			{% if not error %}
				<div class="extraMessage d-flex justify-content-center pt-3">
					<a href="{{ absolute_url(path('app_login')) }}">{{ 'login.button'|trans({}, 'security') }}</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
