{% extends 'base.html.twig' %}
{% block title %}
	{{ 'signUp.signUpTitle'|trans([], 'security') }}
{% endblock %}
{% block body %}
	{% set backgrounImage = deployed_status ? absolute_url(asset('Img/login.jpg')) : asset('Img/login.jpg') %}
	<div class="bgImg" data-image="{{ backgrounImage }}"></div>
	<div class="mt-5 {{ is_mobile() ? 'p-3' : 'p-5 d-flex justify-content-center' }} registerContainer">
		<div class="cardExtra {{ is_mobile() ? '' : 'col-9 pt-3' }}">
			<div class="cardBox d-flex justify-content-center">
				<div class="col-md-10 col-lg-12 mt-3">
					{{ include('Form/Type/registrationFlags.html.twig') }}
					<h1 class="h3 mb-3 font-weight-normal text-center">{{ 'signUp.signUpTitle'|trans([],'security') }}</h1>
					{% if error is defined and error %}
						{{ include('General/resultMessages.html.twig', { messages:error }) }}
					{% endif %}
					{{ include('General/sellerForm.html.twig',{ form: registrationForm}) }}
				</div>
			</div>
			<div class="extraMessage d-flex justify-content-center pt-2">
				{{ 'login.signInMessage'|trans({},'security') }}
				&nbsp;&nbsp;
				<a href="{{ absolute_url(path('app_login')) }}">{{ 'login.button'|trans({}, 'security') }}</a>
			</div>
		</div>
	</div>
{% endblock %}
